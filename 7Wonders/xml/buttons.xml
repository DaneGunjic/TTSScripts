<!-- Phase Panel - Always visible -->
<Panel padding="5 5 5 5" id="PhasePanel" color="rgba(0,0,0,1)" width="200" height="80" offsetXY="600 500">
    <VerticalLayout>
        <Text id="CurrentPhase" color="White" fontSize="15">Phase: Setup</Text>
        <Text id="PhaseDesc" color="White" fontSize="15">Choose game settings</Text>
    </VerticalLayout>
</Panel>

<!-- Menu Toggle Button -->
<Button
    id="MenuToggle"
    onClick="ToggleGameMenu"
    rectAlignment="MiddleRight"
    offsetXY="-10 0"
    height="40"
    width="40"
    fontSize="20"
    fontStyle="Bold"
    color="#444444FF"
    textColor="#FFFFFFFF"
    >â–¶
</Button>

