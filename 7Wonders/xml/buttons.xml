<!-- Game Menu Panel - Always visible -->
<Panel
    id="GameMenuPanel"
    color="rgba(30,30,30,0.95)"
    width="280"
    height="400"
    rectAlignment="MiddleCenter"
    padding="10 10 10 10"
    >
    <VerticalLayout spacing="10">
		<!-- Coin Buttons Section -->
        <Panel color="rgba(0,0,0,0.3)" padding="5 5 5 5">
            <VerticalLayout>
                <Text color="#CCCCCC" fontSize="12" fontStyle="Bold">COINS</Text>
                <GridLayout cellSize="50 50" spacing="5 5">
                    <Button icon="Coin1" onClick="DoCoinUI" id="Coin1" height="45" width="45"></Button>
                    <Button icon="Coin3" onClick="DoCoinUI" id="Coin3" height="45" width="45"></Button>
                    <Button icon="Coin6" onClick="DoCoinUI" id="Coin6" height="45" width="45"></Button>
                </GridLayout>
            </VerticalLayout>
        </Panel>

        <!-- Military Victory/Defeat Section -->
        <Panel color="rgba(0,0,0,0.3)" padding="5 5 5 5">
            <VerticalLayout>
                <Text color="#CCCCCC" fontSize="12" fontStyle="Bold">MILITARY CONFLICT</Text>
                <GridLayout cellSize="45 45" spacing="3 3">
                    <Button icon="Victory1" onClick="DoMilitaryUI" id="Victory1" height="40" width="40"></Button>
                    <Button icon="Victory3" onClick="DoMilitaryUI" id="Victory3" height="40" width="40"></Button>
                    <Button icon="Victory5" onClick="DoMilitaryUI" id="Victory5" height="40" width="40"></Button>
                    <Button icon="Victory7" onClick="DoMilitaryUI" id="Victory7" height="40" width="40"></Button>
                    <Button icon="DefeatConflict" onClick="DoMilitaryUI" id="DefeatConflict" height="40" width="40"></Button>
                </GridLayout>
            </VerticalLayout>
        </Panel>

        <!-- Naval Combat Section -->
        <Panel color="rgba(0,0,0,0.3)" padding="5 5 5 5">
            <VerticalLayout>
                <Text color="#CCCCCC" fontSize="12" fontStyle="Bold">NAVAL COMBAT</Text>
                <GridLayout cellSize="35 35" spacing="2 2">
                    <Button icon="NavalVictory1" onClick="DoNavalUI" id="NavalVictory1" height="32" width="32"></Button>
                    <Button icon="NavalVictory3" onClick="DoNavalUI" id="NavalVictory3" height="32" width="32"></Button>
                    <Button icon="NavalVictory5" onClick="DoNavalUI" id="NavalVictory5" height="32" width="32"></Button>
                    <Button icon="NavalVictory7" onClick="DoNavalUI" id="NavalVictory7" height="32" width="32"></Button>
                    <Button icon="NavalDefeat1" onClick="DoNavalUI" id="DefeatNaval1" height="32" width="32"></Button>
                    <Button icon="NavalDefeat2" onClick="DoNavalUI" id="DefeatNaval2" height="32" width="32"></Button>
                    <Button icon="NavalDefeat3" onClick="DoNavalUI" id="DefeatNaval3" height="32" width="32"></Button>
                </GridLayout>
            </VerticalLayout>
        </Panel>
    </VerticalLayout>
</Panel>
